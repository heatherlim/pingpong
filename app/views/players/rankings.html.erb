<h2>Top Ten, Overall</h2>
<table class="table table-striped table-hover ">
 <thead>
   <tr>
     <th>#</th>
     <th>Player Name</th>
     <th>Win Percentage</th>
     <th style="color:#29ce83">Points For</th>
     <th style="color:#eb6864">Points Against</th>
   </tr>
 </thead>
 <tbody>
 <% style_array = ["info", "success", "danger", "warning", "active","info", "success", "danger", "warning", "active"] %>
<% @top_ten_overall.each_with_index do |player, idx|%>
   <tr class="<%= style_array[idx]%>">
     <td><%= idx + 1 %></td>
     <td><%= link_to player.name, player %></td>
     <td><%= player.overall_win_average.round(3)%></td>
     <td><%= player.doubles_points_scored + player.singles_points_scored%></td>
     <td><%= player.doubles_points_against + player.singles_points_against%></td>
   </tr>
<%end%>
 </tbody>
</table>


